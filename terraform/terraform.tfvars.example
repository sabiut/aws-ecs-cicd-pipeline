# AWS Configuration
aws_region = "ap-southeast-2"

# Project Configuration
project_name = "my-app"
environment  = "dev"

# GitHub Configuration
github_org           = "sabiut"
github_frontend_repo = "aws-ecs-frontend-react"
github_backend_repo  = "aws-ecs-backend-django"

# ECS Configuration (must match your existing ECS infrastructure)
ecs_cluster_name          = "my-app-dev-cluster"
ecs_frontend_service_name = "my-app-dev-frontend"
ecs_backend_service_name  = "my-app-dev-backend"

# ECR Configuration
ecr_image_retention_count = 10
enable_image_scanning     = true

# Tags
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Terraform   = "true"
}